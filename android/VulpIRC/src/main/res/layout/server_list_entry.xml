<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:minHeight="56dp" android:gravity="center_vertical">

	<LinearLayout
			android:orientation="vertical"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:paddingLeft="8dp" android:paddingRight="8dp"
			android:gravity="center_vertical" android:layout_weight="1">
		<TextView
				android:focusable="false"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Server Name"
				android:id="@+id/serverName" android:textStyle="bold" android:textSize="18sp"/>
		<TextView
				android:focusable="false"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Status"
				android:id="@+id/serverStatus"/>
	</LinearLayout>
	<Switch
			android:focusable="false"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/toggleConnection"
			android:layout_gravity="center_vertical" android:paddingRight="8dp"/>
</LinearLayout>